<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<vehicle type="bigBag" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../shared/xml/schema/vehicle.xsd">

    <!-- lime bigbag is the same big bag as fertilizer, seeds or feed = 1000L
        there is no way it could contains 2000L of lime !
    -->

    <parentFile xmlFilename="$data/objects/bigBag/bigBag.xml">
        <attributes>
            <set path="vehicle.storeData.name" value="$l10n_fillType_lime"/>
            <set path="vehicle.storeData.image" value="$data/objects/bigBag/lime/store_bigBag_lime.png"/>
            <set path="vehicle.storeData.price" value="225"/>
            <set path="vehicle.storeData.functions.function" value="$l10n_function_bigBagLime"/>
            <set path="vehicle.storeData.financeCategory" value="OTHER"/>

            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(0).fillUnits.fillUnit#fillTypes" value="lime"/>
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(0).fillUnits.fillUnit#startFillType" value="lime"/>
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(0).fillUnits.fillUnit#capacity" value="1000"/>
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(0).fillUnits.fillUnit#startFillLevel" value="1000"/>
         </attributes>
    </parentFile>

    <!-- ONLY FOR ICON GENERATION -->
    <storeData>
        <name>$l10n_shopItem_bigBagLime</name>
        <image>$data/objects/bigBag/lime/store_bigBag_lime.png</image>
        <brand>NONE</brand>
        <category>bigbags</category>

        <storeIconRendering>
            <settings cameraXRot="-15" cameraYRot="35"/>
        </storeIconRendering>
        <vertexBufferMemoryUsage>0</vertexBufferMemoryUsage>
        <indexBufferMemoryUsage>0</indexBufferMemoryUsage>
        <textureMemoryUsage>0</textureMemoryUsage>
        <audioMemoryUsage>0</audioMemoryUsage>
        <instanceVertexBufferMemoryUsage>0</instanceVertexBufferMemoryUsage>
        <instanceIndexBufferMemoryUsage>0</instanceIndexBufferMemoryUsage>
    </storeData>

</vehicle>