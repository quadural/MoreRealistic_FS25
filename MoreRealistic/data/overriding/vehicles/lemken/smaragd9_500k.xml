            <set path="vehicle.animations.animation(2).part(0)#lowerRotationOffsetStart" value="0" />
            <set path="vehicle.animations.animation(2).part(0)#lowerRotationOffsetEnd" value="0" />
            <set path="vehicle.workModes.workMode(0)#forceScale" value="0.7" />

            <set path="vehicle.speedRotatingParts.speedRotatingPart(0)#fadeOutTime" value="10" />
            <set path="vehicle.speedRotatingParts.speedRotatingPart(1)#fadeOutTime" value="10" />
            <set path="vehicle.speedRotatingParts.speedRotatingPart(2)#fadeOutTime" value="10" />
            <set path="vehicle.speedRotatingParts.speedRotatingPart(3)#fadeOutTime" value="10" />
            <set path="vehicle.speedRotatingParts.speedRotatingPart(0)#radius" value="0.22" />
            <set path="vehicle.speedRotatingParts.speedRotatingPart(1)#radius" value="0.22" />
            <set path="vehicle.speedRotatingParts.speedRotatingPart(2)#radius" value="0.22" />
            <set path="vehicle.speedRotatingParts.speedRotatingPart(3)#radius" value="0.22" />

