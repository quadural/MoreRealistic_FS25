<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<vehicle type="loaderVehicle" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../shared/xml/schema/vehicle.xsd">

    <MR>true</MR>
    <!-- hydrostatic transmission means we don't have the full engine power to the wheels. it depends on the hydraulics motors -->
    <mrTransmission isHydrostatic="true" minRpmWanted="1230" maxRpmWanted="1975" powerRatio="0.9" />
    <mrConveyorLoaderVehicle ptoRpm="540" turnedOnPower="20" activeIdlePower="20" activePowerPerLiter="0.03" fillUnitIndex="1" />

    <parentFile xmlFilename="$data/vehicles/ropa/maus5/maus5.xml">
        <attributes>

            <!-- about 31600kgs with fuel, fluids and 800 wide tires -->
            <set path="vehicle.base.components.component(0)#centerOfMass" value="0 1.5 -0.9"/> <!--main body -->
            <set path="vehicle.base.components.component(0)#mass" value="23100"/>

            <set path="vehicle.base.components.component(1)#centerOfMass" value="0 0 -0.8"/> <!--header : central part -->
            <set path="vehicle.base.components.component(1)#mass" value="1500"/>

            <set path="vehicle.base.components.component(2)#centerOfMass" value="0 0 0.2"/> <!--header : left part -->
            <set path="vehicle.base.components.component(2)#mass" value="1500"/>

            <set path="vehicle.base.components.component(3)#centerOfMass" value="0 0 0.2"/> <!--header : right part -->
            <set path="vehicle.base.components.component(3)#mass" value="1500"/>

            <set path="vehicle.base.components.component(4)#centerOfMass" value="0 0 0"/> <!--header : grabber -->
            <set path="vehicle.base.components.component(4)#mass" value="300"/>

            <!--wheels -->
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0).physics#spring" value="90"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(1).physics#spring" value="90"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(2).physics#spring" value="90"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(3).physics#spring" value="90"/>

            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0).physics#damper" value="5"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(1).physics#damper" value="5"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(2).physics#damper" value="5"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(3).physics#damper" value="5"/>

            <set path="vehicle.dischargeable.dischargeNode#emptySpeed" value="250"/> <!-- about 560T per hour max speed -->
            <set path="vehicle.shovel.shovelNode#fillLitersPerSecond" value="700"/>


            <set path="vehicle.motorized.differentialConfigurations.differentialConfiguration.differentials.differential(0)#maxSpeedRatio" value="1.3" />
            <set path="vehicle.motorized.differentialConfigurations.differentialConfiguration.differentials.differential(1)#maxSpeedRatio" value="1.3" />
            <set path="vehicle.motorized.differentialConfigurations.differentialConfiguration.differentials.differential(2)#maxSpeedRatio" value="1.3" />


            <!-- mercedes OM936LA.E4-1 // 66L/h @2000rpm and 262KW-->
            <!-- DEF = about 6.5% of the fuel rate => 4.3L/H -->
            <set path="vehicle.motorized.consumerConfigurations.consumerConfiguration(0).consumer(0)#usage" value="66"/>
            <set path="vehicle.motorized.consumerConfigurations.consumerConfiguration(0).consumer(1)#usage" value="4.3"/>

            <remove path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor"/>

            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor#torqueScale" value="1"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor#minRpm" value="780"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor#maxRpm" value="2200"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor#mrGovernorRpmRange" value="150"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor#maxForwardSpeed" value="41"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor#maxBackwardSpeed" value="17"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor#ptoMotorRpmRatio" value="2.27"/> <!-- 1200rpm for loading -->
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor#brakeForce" value="13"/>

            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).transmission#minForwardGearRatio" value="18"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).transmission#minBackwardGearRatio" value="43.5"/>

            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(0)#rpm" value="780"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(0)#torque" value="0.970"/>

            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(1)#rpm" value="800"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(1)#torque" value="1.000"/>

            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(2)#rpm" value="1100"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(2)#torque" value="1.375"/>

            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(3)#rpm" value="1200"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(3)#torque" value="1.405"/>

            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(4)#rpm" value="1600"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(4)#torque" value="1.400"/>

            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(5)#rpm" value="1900"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(5)#torque" value="1.300"/>

            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(6)#rpm" value="2000"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(6)#torque" value="1.250"/>

            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(7)#rpm" value="2200"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(7)#torque" value="1.000"/>

        </attributes>
    </parentFile>

</vehicle>