<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<vehicle type="trailer" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../shared/xml/schema/vehicle.xsd">

<MR>true</MR>

    <!--
        load capacity 17t
        gross weight 24T (technical = 27T)
        base empty weight = 7t

        tipping angle = 45Â° side and 48Â° rear
        internal body = 7300x2416x800+800 (14.11 / 28.22M3)

        base game attachable brakeForce = multiplied by 10 and apply to each wheel
        and so, it means a 6 wheels trailer get 60KN braking force by setting the value of 1
        in our case, this trailer is well equiped to brake up to 24T @60kph

        brake cam 406x120

    -->

    <parentFile xmlFilename="$data/vehicles/farmtech/ddk2400/ddk2400.xml">
        <attributes>

            <set path="vehicle.base.components.component(0)#centerOfMass" value="0 1.2 -0.7"/>
            <set path="vehicle.base.components.component(1)#centerOfMass" value="0 -0.3 0"/>
            <set path="vehicle.base.components.component(2)#centerOfMass" value="0 0 -0.35"/>

            <set path="vehicle.base.components.component(0)#mass" value="3000"/>
            <set path="vehicle.base.components.component(1)#mass" value="1500"/>
            <set path="vehicle.base.components.component(2)#mass" value="600"/>

            <remove path="vehicle.attachable.brakeForce" />
            <set path="vehicle.attachable.brakeForce#force" value="2"/>


            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0).physics#spring" value="71"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(1).physics#spring" value="71"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(2).physics#spring" value="71"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(3).physics#spring" value="71"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(4).physics#spring" value="71"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(5).physics#spring" value="71"/>

            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0).physics#damper" value="11"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(1).physics#damper" value="11"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(2).physics#damper" value="11"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(3).physics#damper" value="11"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(4).physics#damper" value="11"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(5).physics#damper" value="11"/>

            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0).physics#brakeFactor" value="1"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(1).physics#brakeFactor" value="1"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(2).physics#brakeFactor" value="1"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(3).physics#brakeFactor" value="1"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(4).physics#brakeFactor" value="1"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(5).physics#brakeFactor" value="1"/>


            <!-- bale config -->
            <remove path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(0).objectChange(5)"/>
            <remove path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(0).objectChange(4)"/>

            <!-- small extension -->
            <remove path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(1).objectChange(1)"/>
            <remove path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(1).objectChange(0)"/>
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(1).objectChange(0)#node" value="ddk2400_main_component1"/>
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(1).objectChange(0)#mrAddMassActive" value="750"/>
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(1).objectChange(0)#mrAddMassCOMActive" value="0 1.3 0.3"/>
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(1).fillUnits.fillUnit(0)#mrCenterOfMass" value="0 1.7 -0.7"/>

            <!-- double extension -->
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(2).objectChange(5)#node" value="ddk2400_main_component1"/>
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(2).objectChange(5)#mrAddMassActive" value="1500"/>
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(2).objectChange(5)#mrAddMassCOMActive" value="0 1.4 0.3"/>
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(2).fillUnits.fillUnit(0)#mrCenterOfMass" value="0 2.1 -0.7"/>

            <!-- empty speed -->
            <set path="vehicle.dischargeable.dischargeableConfigurations.dischargeableConfiguration(1).dischargeNode(0)#emptySpeed" value="1400"/>
            <set path="vehicle.dischargeable.dischargeableConfigurations.dischargeableConfiguration(1).dischargeNode(1)#emptySpeed" value="200"/>
            <set path="vehicle.dischargeable.dischargeableConfigurations.dischargeableConfiguration(1).dischargeNode(2)#emptySpeed" value="1700"/>
            <set path="vehicle.dischargeable.dischargeableConfigurations.dischargeableConfiguration(1).dischargeNode(3)#emptySpeed" value="1700"/>

            <!-- trailer hitch rot adjustment -->
            <set path="vehicle.attachable.inputAttacherJoints.inputAttacherJoint(0)#lowerRotLimitScale" value="1 0.93 1" />


        </attributes>
    </parentFile>

</vehicle>