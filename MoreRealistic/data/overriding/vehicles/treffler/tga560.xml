<?xml version="1.0" encoding="utf-8" standalone="no"?>
<vehicle type="cultivator" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../shared/xml/schema/vehicle.xsd">

    <MR>true</MR>
    <mrPowerConsumer forcePointY="0.2" />

    <!--

            option = 3 rows harrow

            2650kg

            with support wheels => +300kg but center of mass a little bit toward the tractor

            only "shallow" mode = 8-9cm

         -->

    <parentFile xmlFilename="$data/vehicles/treffler/tga560/tga560.xml">
        <attributes>
            <set path="vehicle.powerConsumer#maxForce" value="31" />
            <set path="vehicle.base.components.component(0)#centerOfMass" value="0 0.5 0.4" />
            <set path="vehicle.base.components.component(0)#mass" value="2550" />

            <set path="vehicle.attachable.brakeForce#force" value="0" />

            <set path="vehicle.groundReferenceNodes.groundReferenceNode(0)#forceFactor" value="2" />



            <!-- without support wheels -->
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0).physics#suspTravel" value="0.4" />
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(1).physics#suspTravel" value="0.4" />
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0).physics#mass" value="0.05" />
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(1).physics#mass" value="0.05" />

            <set path="vehicle.attachable.inputAttacherJointConfigurations.inputAttacherJointConfiguration(0).inputAttacherJoint#upperRotationOffset" value="12" />
            <set path="vehicle.attachable.inputAttacherJointConfigurations.inputAttacherJointConfiguration(0).inputAttacherJoint#mrLowerRotationOffset" value="-2" />
            <set path="vehicle.attachable.inputAttacherJointConfigurations.inputAttacherJointConfiguration(0).inputAttacherJoint.distanceToGround#upper" value = "0.95" />
            <set path="vehicle.attachable.inputAttacherJointConfigurations.inputAttacherJointConfiguration(0).inputAttacherJoint#lowerRotLimitScale" value="0.05 0 0.05" />

            <!-- with support wheels -->
            <set path="vehicle.attachable.inputAttacherJointConfigurations.inputAttacherJointConfiguration(1).objectChange(3)#node" value="tga560_main_component1"/>
            <set path="vehicle.attachable.inputAttacherJointConfigurations.inputAttacherJointConfiguration(1).objectChange(3)#mrAddMassActive" value="210"/>
            <set path="vehicle.attachable.inputAttacherJointConfigurations.inputAttacherJointConfiguration(1).objectChange(3)#mrAddMassCOMActive" value="0 0.2 1.3"/>

            <set path="vehicle.attachable.inputAttacherJointConfigurations.inputAttacherJointConfiguration(1).inputAttacherJoint#upperRotationOffset" value="12" />
            <set path="vehicle.attachable.inputAttacherJointConfigurations.inputAttacherJointConfiguration(1).inputAttacherJoint#mrLowerRotationOffset" value="-2" />
            <set path="vehicle.attachable.inputAttacherJointConfigurations.inputAttacherJointConfiguration(1).inputAttacherJoint.distanceToGround#upper" value = "0.95" />
            <set path="vehicle.attachable.inputAttacherJointConfigurations.inputAttacherJointConfiguration(1).inputAttacherJoint#lowerRotLimitScale" value="0.05 0 0.05" />


            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(1).wheels.wheel(0).physics#spring" value="5" />
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(1).wheels.wheel(1).physics#spring" value="10" />
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(1).wheels.wheel(2).physics#spring" value="5" />
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(1).wheels.wheel(3).physics#spring" value="5" />
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(1).wheels.wheel(4).physics#spring" value="5" />
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(1).wheels.wheel(5).physics#spring" value="5" />
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(1).wheels.wheel(6).physics#spring" value="10" />
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(1).wheels.wheel(7).physics#spring" value="5" />

            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(1).wheels.wheel(0).physics#supportsWheelSink" value="false" />
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(1).wheels.wheel(1).physics#supportsWheelSink" value="false" />
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(1).wheels.wheel(2).physics#supportsWheelSink" value="false" />
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(1).wheels.wheel(3).physics#supportsWheelSink" value="false" />
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(1).wheels.wheel(4).physics#supportsWheelSink" value="false" />
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(1).wheels.wheel(5).physics#supportsWheelSink" value="false" />
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(1).wheels.wheel(6).physics#supportsWheelSink" value="false" />
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(1).wheels.wheel(7).physics#supportsWheelSink" value="false" />

            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(1).wheels.wheel(1).physics#suspTravel" value="0.08" />
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(1).wheels.wheel(2).physics#suspTravel" value="0.15" />
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(1).wheels.wheel(3).physics#suspTravel" value="0.15" />
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(1).wheels.wheel(4).physics#suspTravel" value="0.15" />
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(1).wheels.wheel(5).physics#suspTravel" value="0.15" />
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(1).wheels.wheel(6).physics#suspTravel" value="0.08" />

            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(1).wheels.wheel(8).physics#suspTravel" value="0.4" />
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(1).wheels.wheel(9).physics#suspTravel" value="0.4" />
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(1).wheels.wheel(8).physics#mass" value="0.01" />
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(1).wheels.wheel(9).physics#mass" value="0.01" />


        </attributes>
    </parentFile>

</vehicle>