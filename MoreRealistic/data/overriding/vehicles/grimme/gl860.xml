<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<vehicle type="sowingMachine" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../shared/xml/schema/vehicle.xsd">

    <MR>true</MR>
    <mrPowerConsumer forcePointY="0.35" forcePointZ="-1" />

    <!--

        8 rows cup planter = limited planting speed

        6000kg hydraulic flat tipping bunker
        4 wheels 9.5-24 AS
        loosening tines + cage rolling ridging equipment

    -->

    <parentFile xmlFilename="$data/vehicles/grimme/gl860/gl860.xml">
        <attributes>

            <set path="vehicle.base.components.component(0)#mass" value="6190" />
            <set path="vehicle.base.components.component(0)#centerOfMass" value="0 1.2 -0.6" />

            <set path="vehicle.base.components.component(1)#mass" value="500" />
            <set path="vehicle.base.components.component(1)#centerOfMass" value="0 0 -0.4" />

            <set path="vehicle.base.speedLimit#value" value="9" />

            <set path="vehicle.storeData.specs.neededPower" value="200" />

            <!-- correct wheels -->
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0)#filename" value="$data/shared/wheels/tires/trelleborg/TM600/320_85R24.xml" />
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0).additionalWheel#filename" value="$data/shared/wheels/tires/trelleborg/TM600/320_85R24.xml" />
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(1)#filename" value="$data/shared/wheels/tires/trelleborg/TM600/320_85R24.xml" />
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(1).additionalWheel#filename" value="$data/shared/wheels/tires/trelleborg/TM600/320_85R24.xml" />

            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0).tire#isInverted" value="true" />
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(1).tire#isInverted" value="true" />
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0).additionalWheel.tire#isInverted" value="true" />
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(1).additionalWheel.tire#isInverted" value="true" />


            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0).physics#spring" value="80" />
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0).physics#damper" value="10" />
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0).physics#mrForcePointPositionX" value="1.62" />

            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(1).physics#spring" value="80" />
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(1).physics#damper" value="10" />
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(1).physics#mrForcePointPositionX" value="-1.62" />




            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(0).fillUnits.fillUnit(0)#mrCenterOfMass" value="0 1.95 -1.45"/> <!-- potatoes -->
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(0).fillUnits.fillUnit(0)#capacity" value="9000"/> <!-- 6000kg bunker -->

            <!-- IRL = when lowered, there is far less weight on the wheels.
            But ingame, we keep all the weight on the wheels, which means the maxForce here is lower to take into account the "huge" rolling forces from the wheels -->
            <set path="vehicle.powerConsumer#maxForce" value="60" />
            <set path="vehicle.powerConsumer#ptoRpm" value="475" />
            <set path="vehicle.powerConsumer#neededMaxPtoPower" value="15" />
            <set path="vehicle.sowingMachine.needsActivation#value" value="true" />

            <!-- no brakes -->
            <set path="vehicle.attachable.brakeForce#force" value="0" />

            <!-- correct depth at work -->
            <set path="vehicle.attachable.inputAttacherJoints.inputAttacherJoint(0)#attacherHeight" value = "0.6" />
            <set path="vehicle.animations.animation(0).part(0)#startRot" value="-1 0 0" />
            <set path="vehicle.animations.animation(0).part(1)#startRot" value="-3 0 0" />

            <set path="vehicle.speedRotatingParts.speedRotatingPart(14)#mrOnlyActiveWhenTurnedOn" value="true" />
            <set path="vehicle.speedRotatingParts.speedRotatingPart(15)#mrOnlyActiveWhenTurnedOn" value="true" />
            <set path="vehicle.speedRotatingParts.speedRotatingPart(16)#mrOnlyActiveWhenTurnedOn" value="true" />
            <set path="vehicle.speedRotatingParts.speedRotatingPart(17)#mrOnlyActiveWhenTurnedOn" value="true" />
            <set path="vehicle.speedRotatingParts.speedRotatingPart(18)#mrOnlyActiveWhenTurnedOn" value="true" />
            <set path="vehicle.speedRotatingParts.speedRotatingPart(19)#mrOnlyActiveWhenTurnedOn" value="true" />
            <set path="vehicle.speedRotatingParts.speedRotatingPart(20)#mrOnlyActiveWhenTurnedOn" value="true" />
            <set path="vehicle.speedRotatingParts.speedRotatingPart(21)#mrOnlyActiveWhenTurnedOn" value="true" />
            <set path="vehicle.speedRotatingParts.speedRotatingPart(22)#mrOnlyActiveWhenTurnedOn" value="true" />
            <set path="vehicle.speedRotatingParts.speedRotatingPart(23)#mrOnlyActiveWhenTurnedOn" value="true" />
            <set path="vehicle.speedRotatingParts.speedRotatingPart(24)#mrOnlyActiveWhenTurnedOn" value="true" />
            <set path="vehicle.speedRotatingParts.speedRotatingPart(25)#mrOnlyActiveWhenTurnedOn" value="true" />

            <!-- can't be 0 -->
            <set path="vehicle.speedRotatingParts.speedRotatingPart(14)#fadeOutTime" value="0.1" />
            <set path="vehicle.speedRotatingParts.speedRotatingPart(15)#fadeOutTime" value="0.1" />
            <set path="vehicle.speedRotatingParts.speedRotatingPart(16)#fadeOutTime" value="0.1" />
            <set path="vehicle.speedRotatingParts.speedRotatingPart(17)#fadeOutTime" value="0.1" />
            <set path="vehicle.speedRotatingParts.speedRotatingPart(18)#fadeOutTime" value="0.1" />
            <set path="vehicle.speedRotatingParts.speedRotatingPart(19)#fadeOutTime" value="0.1" />
            <set path="vehicle.speedRotatingParts.speedRotatingPart(20)#fadeOutTime" value="0.1" />
            <set path="vehicle.speedRotatingParts.speedRotatingPart(21)#fadeOutTime" value="0.1" />
            <set path="vehicle.speedRotatingParts.speedRotatingPart(22)#fadeOutTime" value="0.1" />
            <set path="vehicle.speedRotatingParts.speedRotatingPart(23)#fadeOutTime" value="0.1" />
            <set path="vehicle.speedRotatingParts.speedRotatingPart(24)#fadeOutTime" value="0.1" />
            <set path="vehicle.speedRotatingParts.speedRotatingPart(25)#fadeOutTime" value="0.1" />



        </attributes>
    </parentFile>

</vehicle>
