<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<vehicle type="carFillable" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../shared/xml/schema/vehicle.xsd">

    <MR>true</MR>

    <!--

        no AWD on this truck

        based on N75-150E would mean : 3812kg unladen, 1952kg front and 1860kg rear
        let's say about 4050kg with driver and fluid in game ("extended cab") => 52% front and 48% rear => 2110kg front and 1950kg rear

    -->

    <parentFile xmlFilename="$data/vehicles/lizard/multiPurposeTruck/multiPurposeTruck.xml">
        <attributes>

            <set path="vehicle.base.components.component(0)#centerOfMass" value="0 0.7 0.33"/>
            <set path="vehicle.base.components.component(0)#mass" value="3500"/>

            <remove path="vehicle.motorized.differentialConfigurations.differentialConfiguration.differentials" />
            <set path="vehicle.motorized.differentialConfigurations.differentialConfiguration.differentials.differential(0)#torqueRatio" value="0.5" />
            <set path="vehicle.motorized.differentialConfigurations.differentialConfiguration.differentials.differential(0)#maxSpeedRatio" value="1.3" />
            <set path="vehicle.motorized.differentialConfigurations.differentialConfiguration.differentials.differential(0)#wheelIndex1" value="3" />
            <set path="vehicle.motorized.differentialConfigurations.differentialConfiguration.differentials.differential(0)#wheelIndex2" value="4" />

            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0).physics#mrABS" value="true"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(1).physics#mrABS" value="true"/>

            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0).physics#spring" value="25"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(1).physics#spring" value="25"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(2).physics#spring" value="40"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(3).physics#spring" value="40"/>

            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0).physics#damper" value="12"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(1).physics#damper" value="12"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(2).physics#damper" value="20"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(3).physics#damper" value="20"/>

            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0).physics#suspTravel" value="0.12"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(1).physics#suspTravel" value="0.12"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(2).physics#suspTravel" value="0.16"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(3).physics#suspTravel" value="0.16"/>

            <set path="vehicle.motorized.consumerConfigurations.consumerConfiguration(0).consumer(0)#usage" value="34"/>

            <set path="vehicle.motorized.motorStartDuration" value="2000"/>

            <!-- 4JJ1TC engine, but @170Hp -->

            <remove path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor" />
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor#torqueScale" value="1.133"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor#maxForwardSpeed" value="108"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor#maxBackwardSpeed" value="15"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor#brakeForce" value="7" />
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor#ptoMotorRpmRatio" value="5.09"/>

            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor#minRpm" value="800"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor#maxRpm" value="3000"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor#mrGovernorRpmRange" value="350" />

            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(0)#rpm" value="800"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(0)#torque" value="0.200"/>

            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(1)#rpm" value="1200"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(1)#torque" value="0.340"/>

            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(2)#rpm" value="1400"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(2)#torque" value="0.365"/>

            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(3)#rpm" value="1600"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(3)#torque" value="0.375"/>

            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(4)#rpm" value="1800"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(4)#torque" value="0.380"/>

            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(5)#rpm" value="2800"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(5)#torque" value="0.375"/>

            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(6)#rpm" value="3000"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(6)#torque" value="0.335"/>

            <!-- MYY6S auto 6 speed + R -->
            <remove path="vehicle.motorized.motorConfigurations.motorConfiguration(0).transmission" />
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).transmission#autoGearChangeTime" value="0.7"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).transmission#gearChangeTime" value="0.3"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).transmission#axleRatio" value="14.77"/>

            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).transmission.directionChange#changeTime" value="0.8"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).transmission.directionChange#useGear" value="true"/>

            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).transmission.forwardGear(0)#gearRatio" value="5.979"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).transmission.forwardGear(1)#gearRatio" value="3.434"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).transmission.forwardGear(2)#gearRatio" value="1.862"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).transmission.forwardGear(3)#gearRatio" value="1.297"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).transmission.forwardGear(4)#gearRatio" value="1"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).transmission.forwardGear(5)#gearRatio" value="0.759"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).transmission.backwardGear(0)#gearRatio" value="5.701"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).transmission.backwardGear(0)#name" value="R"/>

            <!-- fillUnit - varying center of mass function of fillLevel -->
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(0).fillUnits.fillUnit(1)#mrCenterOfMass" value="0 1 -0.965"/> <!-- irl value would be 1.2 But IRL we have progressive "spring" and anti-rolling bar -->
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(1).fillUnits.fillUnit(1)#mrCenterOfMass" value="0 1 -0.965"/> <!-- irl value would be 1.4 But IRL we have progressive "spring" and anti-rolling bar -->

            <!-- empty speed -->
            <set path="vehicle.dischargeable.dischargeableConfigurations.dischargeableConfiguration(0).dischargeNode(0)#emptySpeed" value="300"/>
            <set path="vehicle.dischargeable.dischargeableConfigurations.dischargeableConfiguration(0).dischargeNode(1)#emptySpeed" value="400"/>
            <set path="vehicle.dischargeable.dischargeableConfigurations.dischargeableConfiguration(0).dischargeNode(2)#emptySpeed" value="400"/>
            <set path="vehicle.dischargeable.dischargeableConfigurations.dischargeableConfiguration(1).dischargeNode(0)#emptySpeed" value="350"/>

        </attributes>
    </parentFile>

</vehicle>