<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<vehicle type="fruitPreparer" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../shared/xml/schema/vehicle.xsd">

    <MR>true</MR>

    <!--
        base weight = 6900kg
        + optional scalpers
        + optional steerable rear wheels
        + optional dynamic stabilizer wheels (DSW)
        + optional row finder
        => about 7700kg with in game spec

    -->

    <parentFile xmlFilename="$data/vehicles/amityTechnology/defoliator3750/defoliator3750.xml">
        <attributes>

            <set path="vehicle.fruitPreparer#mrPowerScaling" value="6.5" /> <!-- KW per m2 per second -->
            <set path="vehicle.fruitPreparer#mrMaxPower" value="120" /> <!-- max variable KW. total KW = max variable + neededMinPtoPower  -->

            <!-- spring between main body and attacher drawbar -->
            <set path="vehicle.base.components.joint(0)#rotLimitSpring" value="300 9000 9000"/>
            <set path="vehicle.base.components.joint(0)#rotLimitDamping" value="10 50 50"/>
            <set path="vehicle.base.components.joint(0)#allowsJointRotLimitMovement" value="true"/>

            <set path="vehicle.base.components.component(0)#centerOfMass" value="0 0.65 -0.95"/>
            <set path="vehicle.base.components.component(0)#mass" value="6350"/> <!--main -->
            <set path="vehicle.base.components.component(1)#centerOfMass" value="0 0 -0.3"/>
            <set path="vehicle.base.components.component(1)#mass" value="800"/> <!-- drawbar -->

            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0).physics#mrForcePointPositionX" value="2.2"/> <!-- we want the force point of the wheelshape to be applied at external wheels level -->
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(1).physics#mrForcePointPositionX" value="-2.2"/>

            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0).physics#damper" value="10"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0).physics#spring" value="150"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0).physics#mrFrictionScale" value="1.2"/>

            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(1).physics#damper" value="10"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(1).physics#spring" value="150"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(1).physics#mrFrictionScale" value="1.2"/>

            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(2).physics#damper" value="5"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(2).physics#spring" value="100"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(2).physics#mrFrictionScale" value="0.4"/>

            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(3).physics#damper" value="5"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(3).physics#spring" value="100"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(3).physics#mrFrictionScale" value="0.4"/>




            <set path="vehicle.powerConsumer#ptoRpm" value="540" />
            <set path="vehicle.powerConsumer#neededMinPtoPower" value="30" /> <!-- no load pto power -->
            <set path="vehicle.powerConsumer#neededMaxPtoPower" value="30" />


            <!-- no brake -->
            <set path="vehicle.attachable.brakeForce#force" value="0" />

            <!-- keep some weight on the drawbar at work -->
            <set path="vehicle.animations.animation(1).part(0)#startRot" value="0 0 0" />
            <set path="vehicle.animations.animation(1).part(1)#startRotLimit" value="0 0 0" />

            <set path="vehicle.animations.animation(1).part(8)#componentJointIndex" value="1" />
            <set path="vehicle.animations.animation(1).part(8)#startTime" value="0.0" />
            <set path="vehicle.animations.animation(1).part(8)#endTime" value="1.0" />
            <set path="vehicle.animations.animation(1).part(8)#startRotLimitSpring" value="100 9000 9000" />
            <set path="vehicle.animations.animation(1).part(8)#endRotLimitSpring" value="300 9000 9000" />
            <set path="vehicle.animations.animation(1).part(8)#startRotLimitDamping" value="10 50 50" />
            <set path="vehicle.animations.animation(1).part(8)#endRotLimitDamping" value="10 50 50" />

        </attributes>
    </parentFile>

</vehicle>