<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<vehicle type="spreader" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../shared/xml/schema/vehicle.xsd">

<MR>true</MR>

    <!--

        base weight (no option, mini) = 3200kg

    -->

    <parentFile xmlFilename="$data/vehicles/bredal/k105/k105.xml">
        <attributes>

            <set path="vehicle.base.components.component(0)#centerOfMass" value="0 1.5 -0.9"/>
            <set path="vehicle.base.components.component(0)#mass" value="2700"/>


            <remove path="vehicle.attachable.brakeForce" />
            <set path="vehicle.attachable.brakeForce#force" value="2"/>


            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0).physics#spring" value="160"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(1).physics#spring" value="160"/>

            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0).physics#damper" value="3"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(1).physics#damper" value="3"/>

            <set path="vehicle.powerConsumer#neededMaxPtoPower" value="15"/>
            <set path="vehicle.powerConsumer#ptoRpm" value="500"/>

            <!-- no extension -->
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(0).fillUnits.fillUnit(0)#mrCenterOfMass" value="0 2.1 -0.85"/>

            <!-- 23cm extension -->
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(1).objectChange(8)#node" value="k105_main_component1"/>
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(1).objectChange(8)#mrAddMassActive" value="140"/>
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(1).objectChange(8)#mrAddMassCOMActive" value="0 3 -0.9"/>
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(1).fillUnits.fillUnit(0)#mrCenterOfMass" value="0 2.2 -0.9"/>

            <!-- 50cm extension -->
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(2).objectChange(8)#node" value="k105_main_component1"/>
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(2).objectChange(8)#mrAddMassActive" value="280"/>
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(2).objectChange(8)#mrAddMassCOMActive" value="0 3.2 -0.9"/>
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(2).fillUnits.fillUnit(0)#mrCenterOfMass" value="0 2.4 -0.9"/>

            <!-- cover -->
            <set path="vehicle.cover.coverConfigurations.coverConfiguration(1).objectChange(3)#node" value="k105_main_component1"/>
            <set path="vehicle.cover.coverConfigurations.coverConfiguration(1).objectChange(3)#mrAddMassActive" value="300"/>
            <set path="vehicle.cover.coverConfigurations.coverConfiguration(1).objectChange(3)#mrAddMassCOMActive" value="0 3.5 -0.75"/>

            <!-- XE folding spreading unit -->
            <set path="vehicle.foldable.foldingConfigurations.foldingConfiguration(1).objectChange(4)#node" value="k105_main_component1"/>
            <set path="vehicle.foldable.foldingConfigurations.foldingConfiguration(1).objectChange(4)#mrAddMassActive" value="350"/>
            <set path="vehicle.foldable.foldingConfigurations.foldingConfiguration(1).objectChange(4)#mrAddMassCOMActive" value="0 1.2 -2.5"/>

        </attributes>
    </parentFile>

</vehicle>