<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<vehicle type="spreader" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../shared/xml/schema/vehicle.xsd">

<MR>true</MR>

    <!--

        base weight (no option, mini) = 4000kg

        option = steering axle, pto hydro pump, tire = 520/85R46

    -->

    <parentFile xmlFilename="$data/vehicles/amazone/zgts10001/zgts10001.xml">
        <attributes>

            <set path="vehicle.base.components#maxMass" value="99999"/> <!-- remove this unrealistic things ! -->
            <set path="vehicle.base.components.component(0)#centerOfMass" value="0 1 0"/>
            <set path="vehicle.base.components.component(0)#mass" value="3500"/>

            <set path="vehicle.base.speedLimit#value" value="20" />


            <remove path="vehicle.attachable.brakeForce" />
            <set path="vehicle.attachable.brakeForce#force" value="3"/>
            <set path="vehicle.attachable.inputAttacherJoints.inputAttacherJoint(0)#attacherHeight" value="0.75"/>

            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0)#dimensions" value="520_85R46"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(1)#dimensions" value="520_85R46"/>


            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(1).wheels.wheel(0)#dimensions" value="380_105R50"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(1).wheels.wheel(1)#dimensions" value="380_105R50"/>

            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0).physics#yOffset" value="0"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(1).physics#yOffset" value="0"/>

            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0).physics#spring" value="130"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(1).physics#spring" value="130"/>

            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0).physics#damper" value="20"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(1).physics#damper" value="20"/>

            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0).physics#suspTravel" value="0.08"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(1).physics#suspTravel" value="0.08"/>

            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0).physics#mrABS" value="true"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(1).physics#mrABS" value="true"/>

            <set path="vehicle.powerConsumer#neededMaxPtoPower" value="25"/>
            <set path="vehicle.powerConsumer#ptoRpm" value="540"/>

            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(0).fillUnits.fillUnit(0)#mrCenterOfMass" value="0 2.1 -0.3"/>

            <set path="vehicle.animations.animation(1).part(0)#endRot" value="-73 0 0"/>
            <set path="vehicle.animations.animation(1).part(1)#endRot" value="70 0 0"/>



        </attributes>
    </parentFile>

</vehicle>