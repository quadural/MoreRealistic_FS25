<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<vehicle type="sprayer" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../shared/xml/schema/vehicle.xsd">

    <MR>true</MR>

    <!--

        max flow rate = 560 liters per minute (2x260 AR280BP double pump)
        => 560L/min => 9.33L/s (this is the maximum speed possible, IRL, the avg speed would be lower) => for game purpose, we set it to 50%more => 14L/s


    -->

    <parentFile xmlFilename="$data/vehicles/amazone/ux5201Super/ux5201Super.xml">
        <attributes>

            <set path="vehicle.base.speedLimit#value" value="18" />

            <set path="vehicle.base.components#maxMass" value="99999"/> <!-- remove this unrealistic things ! -->
            <set path="vehicle.base.components.component(0)#mass" value="4700"/>
            <set path="vehicle.base.components.component(0)#centerOfMass" value="0 1.7 0.1"/>

            <set path="vehicle.powerConsumer#ptoRpm" value="500" />

            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0).physics#spring" value="80"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(1).physics#spring" value="80"/>

            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0).physics#damper" value="3"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(1).physics#damper" value="3"/>

            <!-- empty speed -->
            <set path="vehicle.dischargeable.dischargeNode(0)#emptySpeed" value="14"/>

            <remove path="vehicle.attachable.brakeForce" />
            <set path="vehicle.attachable.brakeForce#force" value="2.5"/>

            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(0).fillUnits.fillUnit(0)#mrCenterOfMass" value="0 1.5 0.1"/>

        </attributes>
    </parentFile>

</vehicle>