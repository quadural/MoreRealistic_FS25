<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<vehicle type="plow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../shared/xml/schema/vehicle.xsd">

    <MR>true</MR>

    <mrPowerConsumer checkPointX="0.2" checkPointY="0.95" checkPointZ="0.5" forcePointY="-1" varyWithAnimationAnimName="shareAnim" varyWithAnimationStartFactor="1" varyWithAnimationEndFactor="0.75" />


    <!--

T 6000 PLUS
8 furrows

width = 4.2m ? variable
power requirement = 210hp
weight = 3880kilos base model without any option

options =
rear disc
weight transfer

=> 3950kg

about 2500kg on the wheel when in transport position
about 9kph with MT665

physics engine doesnt handle weel one wheel vehicle
=> we have to put more weight on wheel component and less weight on "main body" component

    -->

    <parentFile xmlFilename="$data/vehicles/poettinger/servoT6000Plus/servoT6000Plus.xml">
        <attributes>

            <!-- plough chassis -->
            <set path="vehicle.base.components.component(0)#centerOfMass" value="-1 0.93 -0.5"/>
            <set path="vehicle.base.components.component(0)#mass" value="600"/>
            <set path="vehicle.base.components.component(0)#mrDisableTerrainDisplacementCollision" value="true"/>

            <!-- link between head and chassis -->
            <set path="vehicle.base.components.component(1)#centerOfMass" value="0 0.1 0"/>
            <set path="vehicle.base.components.component(1)#mass" value="600"/>

            <!-- attacher head -->
            <set path="vehicle.base.components.component(2)#centerOfMass" value="0 -0.31 0"/>
            <set path="vehicle.base.components.component(2)#mass" value="600"/>

            <!-- wheel support -->
            <set path="vehicle.base.components.component(3)#centerOfMass" value="0 -0.1 0.20"/>
            <set path="vehicle.base.components.component(3)#mass" value="2000"/>

            <!--load report on the tractor -->
            <!-- <set path="vehicle.base.components.joint(0)#maxRotDriveForce" value="30 0 0"/> -->
            <!-- <set path="vehicle.base.components.joint(0)#rotDriveRotation" value="-10 0 0"/> -->
            <!-- <set path="vehicle.base.components.joint(0)#rotDriveSpring" value="100 0 0"/> -->
            <!-- <set path="vehicle.base.components.joint(0)#rotDriveDamping" value="20 0 0"/> -->

            <set path="vehicle.base.speedLimit#value" value="15"/>

            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0).physics#spring" value="90"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0).physics#damper" value="30"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0).physics#mrFrictionScale" value="3"/>

            <set path="vehicle.powerConsumer#maxForce" value="56" />
            <set path="vehicle.powerConsumer#forceNode" value="servoT6000Plus_attacher_component3" />



            <set path="vehicle.attachable.inputAttacherJoints.inputAttacherJoint(0)#upperRotLimitScale" value="0 0 0" />
            <set path="vehicle.attachable.inputAttacherJoints.inputAttacherJoint(0)#lowerRotLimitScale" value="0 0 0" />
            <set path="vehicle.attachable.inputAttacherJoints.inputAttacherJoint(0)#upperRotationOffset" value="0" />
            <set path="vehicle.attachable.inputAttacherJoints.inputAttacherJoint(0).distanceToGround#lower" value="0.71" />

            <!-- no brake -->
            <set path="vehicle.attachable.brakeForce#force" value="0" />

            <!--fix collision shape touching the ground at work = unexpected draftforce and slidding of the plough (0 load on the ploug wheel = very bad behavior) -->
            <set path="vehicle.animations.animation(1).part(6)#startTrans" value="0 -0.6 0" />
            <set path="vehicle.animations.animation(1).part(7)#startTrans" value="0 0.6 0" />

            <set path="vehicle.animations.animation(4).part(10)#endTrans" value="0 -0.6 0" />
            <set path="vehicle.animations.animation(4).part(11)#startTrans" value="0 0.6 0" />

            <!-- allow some "metal" torsion -->
            <set path="vehicle.animations.animation(0).part(1)#startRotLimit" value="0 0.2 90" />

        </attributes>
    </parentFile>

</vehicle>