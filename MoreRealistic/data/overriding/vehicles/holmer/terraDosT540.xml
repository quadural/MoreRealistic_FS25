<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<vehicle type="combineDrivable" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../shared/xml/schema/vehicle.xsd">

    <MR>true</MR>
    <!-- hydrostatic transmission means we don't have the full engine power to the wheels. it depends on the hydraulics motors -->
    <mrTransmission1 isHydrostatic="true" minRpmWanted="1050" maxRpmWanted="1620" powerRatio="0.8" />
    <!-- threshingPowerFx below 1 means more efficient system than average = less power required -->
    <mrCombine unloadingPower="35" threshingIdlePower="30" threshingPowerFx="1" irlSpotTonPerHour="200" maxFieldThreshingSpeed="13" />

    <parentFile xmlFilename="$data/vehicles/holmer/terraDosT540/terraDosT540.xml">
        <attributes>

            <set path="vehicle.combine#threshingScale" value="0.96"/>

            <set path="vehicle.powerConsumer#neededMaxPtoPower" value="0"/>

            <!-- about 30000kgs (empty, no fuel) => about 31500kgs with fuel, fluids and the driver, and some tools -->
            <set path="vehicle.base.components.component(0)#centerOfMass" value="0 1.1 5.5"/> <!--front part-->
            <set path="vehicle.base.components.component(0)#mass" value="4500"/>
            <set path="vehicle.base.components.component(1)#centerOfMass" value="0 1.2 -1"/> <!-- back part -->
            <set path="vehicle.base.components.component(1)#mass" value="20300"/>
            <set path="vehicle.base.components.component(2)#centerOfMass" value="0 0 0"/> <!-- front axle -->
            <set path="vehicle.base.components.component(2)#mass" value="1500"/>

            <!--wheels -->
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0).physics#spring" value="130"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(1).physics#spring" value="130"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(2).physics#spring" value="130"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(3).physics#spring" value="130"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(4).physics#spring" value="130"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(5).physics#spring" value="130"/>

            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0).physics#damper" value="15"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(1).physics#damper" value="15"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(2).physics#damper" value="15"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(3).physics#damper" value="15"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(4).physics#damper" value="15"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(5).physics#damper" value="15"/>

            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(6).physics#mrFrictionScale" value="0.1"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(7).physics#mrFrictionScale" value="0.1"/>


            <set path="vehicle.powerConsumer#ptoRpm" value="540"/>
            <set path="vehicle.dischargeable.dischargeNode(0)#emptySpeed" value="900"/>

            <set path="vehicle.attacherJoints.attacherJoint(1)#lowerRotLimit" value="25 75 50"/> <!-- trailer high -->


            <set path="vehicle.motorized.differentialConfigurations.differentialConfiguration.differentials.differential(0)#maxSpeedRatio" value="1.3" />
            <set path="vehicle.motorized.differentialConfigurations.differentialConfiguration.differentials.differential(1)#maxSpeedRatio" value="1.3" />
            <set path="vehicle.motorized.differentialConfigurations.differentialConfiguration.differentials.differential(2)#maxSpeedRatio" value="1.3" />
            <set path="vehicle.motorized.differentialConfigurations.differentialConfiguration.differentials.differential(3)#maxSpeedRatio" value="1.3" />
            <set path="vehicle.motorized.differentialConfigurations.differentialConfiguration.differentials.differential(4)#maxSpeedRatio" value="1.3" />


            <!-- MTU 6R 1500 C71 15.6L stage V // 114L/h @1600rpm and 480KW-->
            <!-- DEF = about 6% of the fuel rate -->
            <set path="vehicle.motorized.consumerConfigurations.consumerConfiguration(0).consumer(0)#usage" value="114"/>
            <set path="vehicle.motorized.consumerConfigurations.consumerConfiguration(0).consumer(1)#usage" value="7"/>

            <remove path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor"/>

            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor#torqueScale" value="1"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor#minRpm" value="800"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor#maxRpm" value="1925"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor#mrGovernorRpmRange" value="175"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor#maxForwardSpeed" value="43"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor#maxBackwardSpeed" value="19"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor#ptoMotorRpmRatio" value="1.95"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor#brakeForce" value="10"/>

            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).transmission#minForwardGearRatio" value="12"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).transmission#minBackwardGearRatio" value="30"/>

            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(0)#rpm" value="800"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(0)#torque" value="2.450"/>

            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(1)#rpm" value="900"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(1)#torque" value="2.670"/>

            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(2)#rpm" value="1000"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(2)#torque" value="3.050"/>

            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(3)#rpm" value="1050"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(3)#torque" value="3.080"/>

            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(4)#rpm" value="1300"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(4)#torque" value="3.100"/>

            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(5)#rpm" value="1510"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(5)#torque" value="2.950"/>

            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(6)#rpm" value="1600"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(6)#torque" value="2.870"/>

            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(7)#rpm" value="1720"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(7)#torque" value="2.600"/>

            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(8)#rpm" value="1925"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(8)#torque" value="2.075"/>




            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(0).fillUnits.fillUnit(0)#mrCenterOfMass" value="0 2.7 0.3"/>

            <set path="vehicle.attacherJoints.attacherJoint(0)#rotLimit" value="0 0 0"/>
            <set path="vehicle.attacherJoints.attacherJoint(0)#rotLimitSpring" value="3000 24000 6000"/> <!-- z-axis / y-axis / x-axis -->
            <set path="vehicle.attacherJoints.attacherJoint(0)#rotLimitDamping" value="60 240 60"/>
            <set path="vehicle.attacherJoints.attacherJoint(0)#allowsJointRotLimitMovement" value="true"/>

        </attributes>
    </parentFile>

</vehicle>