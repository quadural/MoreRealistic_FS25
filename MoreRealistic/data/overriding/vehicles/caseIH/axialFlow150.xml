<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<vehicle type="combineDrivable" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../shared/xml/schema/vehicle.xsd">

    <MR>true</MR>
    <!-- hydrostatic transmission means we don't have the full engine power to the wheels. it depends on the hydraulics motors -->
    <mrTransmission isHydrostatic="true" maxRpmWanted="2100" powerRatio="0.8" />
    <!-- chopperPowerFx below 1 means more efficient system than average = less power required -->
    <!-- threshingPowerFx below 1 means more efficient system than average = less power required -->
    <mrCombine chopperIdlePower="12" chopperPowerFx="0.95" unloadingPower="26" threshingIdlePower="50" threshingPowerFx="1" irlSpotTonPerHour="57" maxFieldThreshingSpeed="12" />

    <parentFile xmlFilename="$data/vehicles/caseIH/axialFlow150/axialFlow150.xml">
        <attributes>

            <!-- rotary combine = very little grain losses -->
            <set path="vehicle.combine#threshingScale" value="0.99"/>

            <set path="vehicle.powerConsumer#neededMaxPtoPower" value="0"/>

            <!-- about 15800kgs (empty, no fuel) => about 6700kg on the rear axle with fuel and fluids -->
            <set path="vehicle.base.components.component(0)#centerOfMass" value="0 1.7 0.65"/>
            <set path="vehicle.base.components.component(0)#mass" value="12050"/>
            <set path="vehicle.base.components.component(1)#mass" value="2000"/>

            <!--wheels -->
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0).physics#spring" value="150"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(1).physics#spring" value="150"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(2).physics#spring" value="100"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(3).physics#spring" value="100"/>

            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0).physics#damper" value="25"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(1).physics#damper" value="25"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(2).physics#damper" value="15"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(3).physics#damper" value="15"/>

            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(2).physics#rotationDamping" value="0.03"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(3).physics#rotationDamping" value="0.03"/>


            <set path="vehicle.powerConsumer#ptoRpm" value="540"/>
            <set path="vehicle.dischargeable.dischargeNode(0)#emptySpeed" value="113"/>

            <!-- no rear wheel brake on a combine harvester ! -->
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(2).physics#brakeFactor" value="0" />
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(3).physics#brakeFactor" value="0" />

            <!-- this combine is 2WD in game (no hydraulics rear wheel assist) -->
            <set path="vehicle.motorized.differentialConfigurations.differentialConfiguration.differentials.differential(0)#maxSpeedRatio" value="2" />
            <remove path="vehicle.motorized.differentialConfigurations.differentialConfiguration.differentials.differential(1)" />
            <remove path="vehicle.motorized.differentialConfigurations.differentialConfiguration.differentials.differential(1)" />


            <!-- FPT Cursor 9 8.7L stage V // 78L/h @2000rpm and 338KW-->
            <!-- DEF = about 6.7% of the fuel rate -->
            <set path="vehicle.motorized.consumerConfigurations.consumerConfiguration(0).consumer(0)#usage" value="78"/>
            <set path="vehicle.motorized.consumerConfigurations.consumerConfiguration(0).consumer(1)#usage" value="5.5"/>

            <remove path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor#torqueScale" value="1"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor#minRpm" value="600"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor#maxRpm" value="2100"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor#maxForwardSpeed" value="32"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor#maxBackwardSpeed" value="15"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor#ptoMotorRpmRatio" value="3.89"/>

            <!-- governor regulation = 10% -->
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor#mrGovernorRpmRange" value="200" />
            <!-- combine harvester = greater engine inertia than tractors or other vehicles -->
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor#mrInertiaFx" value="1.5" />

            <!-- better brake force since only the front wheels are braking -->
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor#brakeForce" value="24"/>

            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(0)#rpm" value="600"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(0)#torque" value="0.820"/>

            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(1)#rpm" value="800"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(1)#torque" value="0.840"/>

            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(2)#rpm" value="1000"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(2)#torque" value="0.9"/>

            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(3)#rpm" value="1050"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(3)#torque" value="1"/>

            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(4)#rpm" value="1200"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(4)#torque" value="1.300"/>

            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(5)#rpm" value="1400"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(5)#torque" value="1.700"/>

            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(6)#rpm" value="1500"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(6)#torque" value="1.800"/>

            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(7)#rpm" value="1800"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(7)#torque" value="1.790"/>

            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(8)#rpm" value="2000"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(8)#torque" value="1.615"/>

            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(9)#rpm" value="2100"/>
            <set path="vehicle.motorized.motorConfigurations.motorConfiguration(0).motor.torque(9)#torque" value="1.400"/>

            <!-- more than 90Â° unloading pipe-->
            <set path="vehicle.animations.animation(0).part(0)#endRot" value="0 0 -105" />

            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(0).fillUnits.fillUnit(0)#mrCenterOfMass" value="0 3.7 0.9"/>

            <set path="vehicle.attacherJoints.attacherJoint(0)#rotLimit" value="0 0 0"/>
            <set path="vehicle.attacherJoints.attacherJoint(0)#rotLimitSpring" value="3000 24000 6000"/> <!-- z-axis / y-axis / x-axis -->
            <set path="vehicle.attacherJoints.attacherJoint(0)#rotLimitDamping" value="60 240 60"/>
            <set path="vehicle.attacherJoints.attacherJoint(0)#allowsJointRotLimitMovement" value="true"/>

        </attributes>
    </parentFile>

</vehicle>