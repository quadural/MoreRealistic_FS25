<?xml version="1.0" encoding="utf-8" standalone="no"?>
<vehicle type="cultivator" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../shared/xml/schema/vehicle.xsd">

    <MR>true</MR>
    <mrPowerConsumer forcePointY="0" />

    <!--

        kforce 400 = 9 shanks IRL
        in our case, there are only 7 shanks => this is an extended kforce 350 ?
        franter roller H50

        about 2600kg

    -->

    <parentFile xmlFilename="$data/vehicles/alpego/kForce400/kForce400.xml">
        <attributes>

            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0).physics#radius" value="0.15"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0).physics#suspTravel" value="0.15"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0).physics#rotationDamping" value="0.0001"/>

            <set path="vehicle.powerConsumer#maxForce" value="80" />
            <set path="vehicle.base.components.component(0)#mass" value="2600" />
            <set path="vehicle.base.components.component(0)#centerOfMass" value="0 0.8 0.2" />

            <set path="vehicle.attachable.inputAttacherJoints.inputAttacherJoint(0)#upperRotationOffset" value="12" />
            <set path="vehicle.attachable.inputAttacherJoints.inputAttacherJoint(0)#mrLowerRotationOffset" value="-2" />
            <set path="vehicle.attachable.inputAttacherJoints.inputAttacherJoint(0)#lowerRotLimitScale" value="0.025 0 0.02" />
            <set path="vehicle.attachable.inputAttacherJoints.inputAttacherJoint(0).distanceToGround#upper" value="1" />

        </attributes>
    </parentFile>

</vehicle>