<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<vehicle type="motorbike" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../shared/xml/schema/vehicle.xsd">

    <MR>true</MR>

    <!-- mass = about 225kg with driver and fluids -->

    <!-- larger rear sprocket to get more "grunt" -->

    <parentFile xmlFilename="$data/vehicles/aprilia/rx125/rx125.xml">
        <attributes>

            <set path="vehicle.base.components.component(0)#centerOfMass" value="0 0.42 -0.3"/>
            <set path="vehicle.base.components.component(0)#inertiaScale" value="1 1 4"/>
            <set path="vehicle.base.components.component(0)#mass" value="190"/> <!-- bike + pilot -->

            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0).physics#brakeFactor" value="0.2"/>

            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0).physics#mass" value="0.005"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(1).physics#mass" value="0.003"/>
