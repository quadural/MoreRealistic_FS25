<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<vehicle type="trailer" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../shared/xml/schema/vehicle.xsd">

    <MR>true</MR>

    <!--
        volume without extension = 25.3M3
        volume with 80cm extension = 38.5M3

        empty weight 7300 with 600/55R26.5, no extension, no steering axle
        in game = 600/60r30.5 and steering axle => +300kg = 7600

    -->

    <parentFile xmlFilename="$data/vehicles/krampe/bigBodyS750/bigBodyS750.xml">
        <attributes>

            <set path="vehicle.base.components.component(0)#centerOfMass" value="0 1.4 -0.6"/>
            <set path="vehicle.base.components.component(0)#mass" value="6500"/>

            <remove path="vehicle.attachable.brakeForce" />
            <set path="vehicle.attachable.brakeForce#force" value="2.7"/>

            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0).physics#suspTravel" value="0.18"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(1).physics#suspTravel" value="0.18"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(2).physics#suspTravel" value="0.18"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(3).physics#suspTravel" value="0.18"/>


            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0).physics#spring" value="70"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(1).physics#spring" value="70"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(2).physics#spring" value="70"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(3).physics#spring" value="70"/>


            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0).physics#damper" value="20"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(1).physics#damper" value="20"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(2).physics#damper" value="20"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(3).physics#damper" value="20"/>

            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(0).physics#yOffset" value="-0.02"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(1).physics#yOffset" value="-0.02"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(2).physics#yOffset" value="-0.02"/>
            <set path="vehicle.wheels.wheelConfigurations.wheelConfiguration(0).wheels.wheel(3).physics#yOffset" value="-0.02"/>



            <!-- extension -->
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(0).objectChange(10)#node" value="bigBodyS750_main_component1"/>
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(0).objectChange(10)#mrAddMassActive" value="400"/>
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(0).objectChange(10)#mrAddMassCOMActive" value="0 3.4 -1.3"/>
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(0).fillUnits.fillUnit(0)#mrCenterOfMass" value="0 2.5 -1.25"/>
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(0).fillUnits.fillUnit(0)#capacity" value="38500" />

            <!-- no extension -->
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(1).fillUnits.fillUnit(0)#mrCenterOfMass" value="0 2.2 -1.25"/>
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(1).fillUnits.fillUnit(0)#capacity" value="25300" />

            <!-- reduce crazy price for extension -->
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(0)#price" value="8000" />

            <!-- empty speed -->
            <set path="vehicle.dischargeable.dischargeNode(0)#emptySpeed" value="2200"/> <!-- back -->
            <set path="vehicle.dischargeable.dischargeNode(1)#emptySpeed" value="1700"/> <!-- side -->
            <set path="vehicle.dischargeable.dischargeNode(2)#emptySpeed" value="400"/> <!-- grain door -->

            <!-- lift the back door higher -->
            <set path="vehicle.animations.animation(2).part(1)#endRot" value="78 0 0" />

            <!-- tip time when the door opens-->
            <set path="vehicle.trailer.trailerConfigurations.trailerConfiguration(0).trailer.tipSide(0).doorAnimation#startTipTime" value="0.2" />

        </attributes>
    </parentFile>

</vehicle>